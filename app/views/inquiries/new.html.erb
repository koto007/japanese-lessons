<h1 class="text-center">Contact</h1>
<p class="center">Si vous avez des questions, n'hésitez pas à me contacter.</p>
<div class="row">
  <div class="col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1">
      <div class="panel-body">
        <%= form_for(@inquiry) do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>
          <div class="form-group">
            <%= f.label :name, "Nom d'utilisateur" %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :email, 'Address mail' %>
            <%= f.text_field :email, class: 'form-control', type: 'email' %>
          </div>
          <div class="form-group">
            <%= f.label :message, 'Message' %>
            <%= f.text_area :message, class: 'form-control' %>
          </div>
            <%= f.submit "Envoyer", class: 'btn btn-block btn-default' %>
        <% end %>  
    </div>
  </div>
</div>